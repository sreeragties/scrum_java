<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37474F"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lay"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="180dp"
        android:layout_marginTop="50dp"
        />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="raleway"
        android:text="SCRUM BOARD"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"



        android:textFontWeight="100"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttontask"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_login"
        android:text="Scrum Table"
        android:textColor="#FFFFFF"
        android:fontFamily="raleway"

    tools:layout_editor_absoluteX="161dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".75"
        tools:layout_editor_absoluteY="499dp"
        />
    <Button
        android:id="@+id/buttontask2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_login"
        android:text="Main Tasks"
        android:textColor="#FFFFFF"
        android:fontFamily="raleway"

        tools:layout_editor_absoluteX="161dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".85"
        tools:layout_editor_absoluteY="499dp"
        />

    <Button
        android:id="@+id/buttondash"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textColor="#FFFFFF"
        android:background="@drawable/bt_login"
        android:fontFamily="raleway"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".95"
        android:textFontWeight="100"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="590dp" />

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="410dp"
        android:layout_height="270dp"
        android:orientation="vertical"

        android:background="@drawable/my"



        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="434dp"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>